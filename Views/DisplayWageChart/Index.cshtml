@model H1B_Analysis_Project.Models.Wage
@{
    ViewBag.Title = "Google Charts with MVC";
}

<h2>Index</h2>

<!--Load the AJAX API-->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

    // Load the Visualization API and the corechart package.
    google.charts.load('current', { 'packages': ['corechart'] });

    // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawChart);

    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {

        // Create the data table.
        var dataTable = new google.visualization.DataTable();
        dataTable.addColumn('string', 'SOC Name');
        dataTable.addColumn('number', 'Average Wage in 2015');
        dataTable.addColumn('number', 'Average Wage in 2016');
        dataTable.addColumn('number', 'Total Average Wage');


        // Set chart options
        var options = {
            'title': 'Average Wages for top 4 categories of jobs in IT for H1B Petitioning',
            'width': 1000,
            'hAxis': { minValue: 0 },            
            'height': 600,
            'bar': { groupWidth: '50%' },
            'legend': { position: 'top', maxLines: 3 },
            'pieSliceText': 'label',
            'isStacked': true
        };

        $.ajax({
            type: 'POST',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            async: false,
            url: '@Url.Action("DonutChart")',
            data: '{}',
            success: function (data) {
                $.each(data, function (index, item) {
                    dataTable.addRow([item.SOCName, item.WageIn2015, item.WageIn2016, item.TotalAverageWage])
                });

                chartData = data;
            },
            error: function () {
                alert("Error loading data! Please try again.");
            }
        });

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
        chart.draw(dataTable, options);
    }
</script>

<!--Div that will hold the pie chart-->
<div id="chart_div"></div>





















