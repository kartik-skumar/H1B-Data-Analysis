@model H1B_Analysis_Project.Models.WageGroup
@{
    ViewBag.Title = "Cases on Wage Groups";
}

<h2>Which wage group has the most certified petitions?</h2>
<p></p>
<!--Load the AJAX API-->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

    // Load the Visualization API and the corechart package.
    google.charts.load('current', { 'packages': ['corechart'] });

    // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawChart);

    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {

         // Create the data table.
        var dataTable = new google.visualization.DataTable();
        dataTable.addColumn('string', 'Wage Group');
        dataTable.addColumn('number', 'Certified');
        dataTable.addColumn('number', 'Withdrawn');
        dataTable.addColumn('number', 'Certified_Withdrawn');
        dataTable.addColumn('number', 'Denied');


        // Set chart options
        var options = {
            'title': '',
            'width': 1000,
            'hAxis': { minValue: 0 },
            'explorer': {
                actions: ['dragToZoom', 'rightClickToReset'],
                axis: 'vertical',
                keepInBounds: true,
                maxZoomIn: 50.0
            },
            'height': 600,
            'bar': { groupWidth: '50%' },
            'legend': { position: 'bottom', maxLines: 3 },
            'isStacked': true
        };

        $.ajax({
            type: 'POST',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            async: false,
            url: '@Url.Action("ColumnChart")',
            data: '{}',
            success: function (data) {
                $.each(data, function (index, item) {
                    dataTable.addRow([item.IncomeGroup, item.Certified, item.Withdrawn, item.CertifiedWithdrawn, item.Denied])
                });

            },
            error: function () {
                alert("Error loading data! Please try again.");
            }
        });

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));
        chart.draw(dataTable, options);
    }
</script>

<!--Div that will hold the pie chart-->
<div id="chart_div"></div>
